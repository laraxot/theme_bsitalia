{{#>base/base title="Documenti - Nome del Comune" headerActive1=true}}
<main>
  <div class="container" id="main-container">
    <div class="row justify-content-center">
      <div class="col-12 col-lg-10">
        {{>cmp-breadcrumbs/cmp-breadcrumbs link1="Home" link2="Amministrazione" link3="Documenti e Dati"}}
      </div>
    </div>
  </div>

  <div class="container">
    <div class="row justify-content-center row-shadow">
      <div class="col-12 col-lg-10">
        {{>cmp-hero/cmp-hero
        hero-title="Documenti e Dati"
        hero-text="Donec in consequat nunc. Duis semper fermentum lacus, ac condimentum justo auctor a. Nam erat erat,
        porta vel pharetra in, ullamcorper vel turpis."
        wrapper-class="pt-0 ps-0 pb-4 pb-lg-60"}}
      </div>
    </div>
  </div>

  <div class="container py-5">
    <h2 class="title-xxlarge mb-4">In evidenza</h2>
    <div class="row g-4">
      <div class="col-sm-6 col-lg-4">
        <div class="card-wrapper rounded shadow-sm border border-light pb-0">
          <div class="card bg-none no-after">
            <div class="card-body">
              <div class="categoryicon-top">
                <svg class="icon icon-sm" aria-hidden="true">
                  <use href="../assets/bootstrap-italia/dist/svg/sprites.svg#it-file"></use>
                </svg>
                <span class="text fw-semibold">
                  <a href="#" class="text-decoration-none">Bandi e avvisi</a></span>
              </div>
              <a href="#" class="text-decoration-none">
                <h3 class="card-title h5 ">Avviso per richiedere il bonus idrico integrativo 2022</h3>
              </a>
              <p class="card-text">Avviata la procedura per richiedere il contributo finalizzato alla riduzione dei costi della bolletta dell'acqua o delle situazioni di morosità pregresse.</p>
            </div>
          </div>
        </div>
      </div>

      <div class="col-sm-6 col-lg-4">
        <div class="card-wrapper rounded shadow-sm border border-light pb-0">
