@if ($paginator->hasPages())
    <nav class="pagination-wrapper justify-content-center" aria-label="Navigazione paginata">
        <ul class="pagination">
            {{-- Previous Page Link --}}
            @if ($paginator->onFirstPage())
                <li class="page-item disabled">
                    <span class="Icon-chevron-left u-text-r-s" role="presentation"></span>
                </li>
            @else
                <li class="page-item">
                    <a class="page-link" href="{{ $paginator->previousPageUrl() }}">
                        <svg class="icon icon-primary"><use xlink:href="{{ asset('vendor/bootstrap-italia/dist/svg/sprite.svg#it-chevron-left') }}"></use></svg>
                        <span class="sr-only">@lang('pagination.previous')</span>
                    </a>
                </li>

            @endif

            {{-- Pagination Elements --}}
            @foreach ($elements as $element)
                {{-- "Three Dots" Separator --}}
                @if (is_string($element))
                    <li class="page-item" aria-hidden="true">
                        ...
                    </li>
                @endif

                {{-- Array Of Links --}}
                @if (is_array($element))
                    @foreach ($element as $page => $url)
                        @if ($page == $paginator->currentPage())
                            <li class="page-item">
                                <a class="page-link" href="#" aria-current="page">
                                    <span class="d-inline-block d-sm-none">Pagina </span>{{ $page }}
                                </a>
                            </li>
                        @else
                            <li class="page-item">
                                <a href="{{ $url }}" aria-label="{{ $page }}" class="page-link">
                                    {{ $page }}
                                </a>
                            </li>
                        @endif
                    @endforeach
                @endif
            @endforeach

            {{-- Next Page Link --}}
            @if ($paginator->hasMorePages())
                <li class="page-item">
                    <a class="page-link" href="{{ $paginator->nextPageUrl() }}">
                        <svg class="icon icon-primary"><use xlink:href="{{ asset('vendor/bootstrap-italia/dist/svg/sprite.svg#it-chevron-right') }}"></use></svg>
                        <span class="sr-only">@lang('pagination.next')</span>
                    </a>
                </li>
            @else
                <li class="page-item">
                    <span class="Icon-chevron-right u-text-r-s" role="presentation"></span>
                </li>
            @endif
        </ul>
    </nav>
@endif
